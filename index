<body>
  <div class="wrap">
    <h1>Senses Verbs: Match the adjectives to the correct verb</h1>
    <p>Choose the best verb for each adjective: <strong>look / feel / seem / smell / sound</strong>.</p>

    <div class="grid">
      <!-- LEFT: TASK -->
      <div class="card">
        <h2 style="font-size:16px; margin:0 0 6px;">A. Adjectives (matching)</h2>
        <div class="verbs" aria-label="Verb options">
          <span class="chip">look</span>
          <span class="chip">feel</span>
          <span class="chip">seem</span>
          <span class="chip">smell</span>
          <span class="chip">sound</span>
        </div>

        <table aria-label="Adjective matching table">
          <thead>
            <tr>
              <th class="num">No.</th>
              <th>Adjective</th>
              <th>Verb</th>
            </tr>
          </thead>
          <tbody id="rows"></tbody>
        </table>

        <div class="actions">
          <button type="button" id="resetBtn">Reset</button>
          <button type="button" id="showKeyBtn">Show answer key</button>
          <button type="button" id="hideKeyBtn" style="display:none;">Hide answer key</button>
        </div>

        <div class="note">Tip: Some adjectives can work with more than one verb, but choose the most natural one for B1.</div>
      </div>

      <!-- RIGHT: ANSWER KEY -->
      <div class="card">
        <h2 style="font-size:16px; margin:0 0 6px;">Teacher area</h2>
        <p style="margin:0; color:var(--muted);">Use this for quick checking.</p>

        <div class="key" id="answerKey">
          <strong>Answer key (suggested)</strong>
          <ul>
            <li><strong>look</strong>: shiny, blurry, colourful, crooked</li>
            <li><strong>feel</strong>: smooth, rough, sticky, soft</li>
            <li><strong>smell</strong>: fragrant, smoky, mouldy, spicy</li>
            <li><strong>sound</strong>: noisy, echoing, whisper-quiet, melodic</li>
            <li><strong>seem</strong>: nervous, confident, suspicious, exhausted</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <script>
    const adjectives = [
      "shiny",
      "blurry",
      "colourful",
      "crooked",
      "smooth",
      "rough",
      "sticky",
      "soft",
      "fragrant",
      "smoky",
      "mouldy",
      "spicy",
      "noisy",
      "echoing",
      "whisper-quiet",
      "melodic",
      "nervous",
      "confident",
      "suspicious",
      "exhausted"
    ];

    const verbs = ["", "look", "feel", "seem", "smell", "sound"];

    const tbody = document.getElementById("rows");

    function makeRow(i, adj){
      const tr = document.createElement("tr");

      const tdNum = document.createElement("td");
      tdNum.className = "num";
      tdNum.textContent = i + 1;

      const tdAdj = document.createElement("td");
      tdAdj.textContent = adj;

      const tdSel = document.createElement("td");
      const sel = document.createElement("select");
      sel.name = `q${i+1}`;
      verbs.forEach(v => {
        const opt = document.createElement("option");
        opt.value = v;
        opt.textContent = v === "" ? "— choose —" : v;
        sel.appendChild(opt);
      });
      tdSel.appendChild(sel);

      tr.appendChild(tdNum);
      tr.appendChild(tdAdj);
      tr.appendChild(tdSel);

      return tr;
    }

    function render(){
      tbody.innerHTML = "";
      adjectives.forEach((adj, i) => tbody.appendChild(makeRow(i, adj)));
    }

    render();

    // Buttons
    const resetBtn = document.getElementById("resetBtn");
    const showKeyBtn = document.getElementById("showKeyBtn");
    const hideKeyBtn = document.getElementById("hideKeyBtn");
    const answerKey = document.getElementById("answerKey");

    resetBtn.addEventListener("click", () => {
      document.querySelectorAll("select").forEach(s => s.value = "");
    });

    showKeyBtn.addEventListener("click", () => {
      answerKey.style.display = "block";
      showKeyBtn.style.display = "none";
      hideKeyBtn.style.display = "inline-block";
    });

    hideKeyBtn.addEventListener("click", () => {
      answerKey.style.display = "none";
      showKeyBtn.style.display = "inline-block";
      hideKeyBtn.style.display = "none";
    });
  </script>
</body>
